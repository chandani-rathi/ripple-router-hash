{
	"name": "ripple-router-hash",
	"version": "0.0.1",
	"description": "",
	"type": "module",
	"scripts": {
		"watch:lib:hash": "pnpm --filter ripple-router-hash run watch",
		"watch:apps:hash": "pnpm --filter simple-hash run dev",
		"watch:apps:flow": "pnpm --filter project-flow run dev",
		"dev": "npx npm-run-all2 --parallel watch:**",
		"dev2": "npx npm-run-all2 --parallel watch:lib:hash watch:apps:flow",
		"test:apps:sample-hash": "pnpm --filter simple-hash run test",
		"test:hash": "pnpm --filter ripple-router-hash run test",
		"test": "npx npm-run-all2 --parallel test:**",
		"build" : "npm run build -w ripple-router-hash",
		"patch:hash": "cd packages/ripple-router-hash && npm run patch",
		"patch:plugin": "cd packages/vite-plugin-ripple-router-hash && npm run patch",
		"patch": "npx npm-run-all2 --parallel patch:**",
		"publish:hash": "cd packages/ripple-router-hash && npm run publish",
		"publish:plugin": "cd packages/vite-plugin-ripple-router-hash && npm run publish",
		"publish": "npx npm-run-all2 --parallel publish:**"
	},
	"license": "MIT",
	"devDependencies": {
		"jsdom": "^27.0.0",
		"vite-plugin-ripple": "^0.2.43",
		"vitest": "^3.2.4"
	}
}
