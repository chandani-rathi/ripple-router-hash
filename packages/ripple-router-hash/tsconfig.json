{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"jsxImportSource": "ripple",
		"noEmit": true,
		"isolatedModules": true,
		"declaration": true,
    	"declarationMap": true,
    	"emitDeclarationOnly": false,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"./*.js",
		"./src/",
		"./tests/*.test.ripple",
	]
}
